<!DOCTYPE html>
<html>
<head>
 <style>
  td {
    border-radius: 3px;
  }
 </style>
</head>
	<body>

  <form method="post"
  action="add_station">
    <table>
        <tr>
          <td>
            NAME
          </td>
          <td colspan="2">
            <input type="text" name="c_name" placeholder="STATION NAME" />
          </td>
        </tr>
        <tr>
          <td>NEAREST SIGNAL:</td>
          <td colspan="3">
            <select  id="hospital" name="n_circle" >
              <optgroup label="SELECT NEAREST CICRCLE">
                  <% listSignals.forEach(function(signal){ %>
                  <option value="<%= signal._id %>"><%= signal.name %></option>
                  <% }) %>
              </optgroup>
          </select>
        </td>
      </tr>
        <tr>
          <td>TOTAL AMBULANCE:</td>
          <td colspan="3">
            <input type="number" name="total_amb"/>
        </td>

        </tr>
        <tr>
          <td colspan="3">
            <input type="submit" value="ADD" name="submit"/>
          </td>
        </tr>
    </table>
	</form>
	</body>
</html>
